{{!-- Comment Modal --}}
<br>
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="modal fade" data-keyboard="false" data-backdrop="static" id="commentModal{{this._id}}" tabindex="-1"
                role="dialog">
                <div class="modal-dialog" modal-lg role="document">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="col-12">
                                <h3>Current Comments: </h3>
                                <form class="signup">
                                    {{#if this.comments}}
                                    {{#each this.comments}}
                                    <div class="form-group">
                                        <p class="form-control comments">{{this.body}}</p>
                                    </div>
                                    {{/each}}
                                    {{else}}
                                    <div class="form-group">
                                        <p>No comments have been saved for this story.</p>
                                    </div>
                                    {{/if}}
                                    <br>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Comment:</label>
                                        <textarea id="newComment{{this._id}}" class="form-control" placeholder="Enter Comment Here"></textarea>
                                    </div>
                                    <button data-id="{{this._id}}" type="button" class="btn btn-outline-info form-control commentBtn">Save
                                        Comment
                                    </button>
                                </form>
                                <br>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>